<div class="Page_width">
   <div class="Homepage_title_component">
      <h2 class="Homepage_medium_title">{{ section.settings.heading }}</h2>
      <div class="Divider"></div>
   </div>
   <div class="Homepage_categories_outer">
     {% for block in section.blocks %}
      <div class="Homepage_categories_cell">
        {% if block.settings.image %}
         <img src="{{ block.settings.image  | img_url : 'master' }}"> 
          {% endif %}
         <div class="inner">
            <div>
               <h3 class="Homepage_categories_title">{{ block.settings.title }}</h3>
               <div class="Homepage_categories_divider"></div>
            </div>
            <div class="inner_flex">
              {% if  block.settings.cta_1_label != blank %}
               <div> <a class="Men_button" href="{{ block.settings.cta_1_link }}">{{ block.settings.cta_1_label }}</a></div>
                {% endif %}
       {% if  block.settings.cta_2_label != blank %}
               <div> <a class="Women_button" href="{{ block.settings.cta_2_link }}">{{ block.settings.cta_2_label }}</a></div>
                {% endif %}
            </div>
         </div>
      </div>
     {% endfor %}
   </div>
</div>
