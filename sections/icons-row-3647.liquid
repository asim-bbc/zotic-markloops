 <img src=" {{ section.settings.icon_2 | img_url : 'master' }}">
  </div>
    {% endif %}
   <div class="store-benefit-texte block_font_size">
           {{ section.settings.icon_2_text }}
        </div>
   </div>

  <div class="icons_wrapper_clp">
  {% if section.settings.icon_3 != blank %}
  <div   class="colleciton_page_single_icon">
 <img src=" {{ section.settings.icon_3 | img_url : 'master' }}">
  </div>
