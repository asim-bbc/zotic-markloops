<style>
  
.tabs__buttons--container {
    display: flex;
    margin-bottom: 1rem;
    margin-top: 2rem;
    justify-content: space-between;
    width: 100%;
      border-bottom: solid 3px #eeeeee;
 
}

.tabs__tab-btn {
  background: none;
  border: none;
  padding: 1rem 2rem;
  cursor: pointer;
  border-bottom: solid 3px #000;
   font-weight:700;
}

.tabs__tab-btn--not-selected {
      border: none;
  font-weight:500;
}

.tabs__tab-btn:hover {
    font-weight:700;
  transition: 0.3s;
  
}

.tabs__tab--hide {
  display: none;
}

.tabs__tab--show {
  display: block;
}

.tabs__tab {
  animation: tabApear 0.6s;
}
 
@keyframes tabApear {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}
  @media only screen and (min-width: 1024px) {
  .tabs_section_wrapper{
   max-width:100%;
}
}
   @media only screen and (max-width: 768px) { 
  padding: 1rem 1rem; 
}
   }
  </style> 
<div class="tabs_section_wrapper">
  <div class="tabs__buttons--container">
  <button type="button" class="tabs__tab-btn" data-tab-id="tab1_{{ block.id }}_{{ for_desk_mob }}">{{ block.settings.tab_title_1 }}</button>
  <button type="button" class="tabs__tab-btn" data-tab-id="tab2_{{ block.id }}_{{ for_desk_mob }}">{{ block.settings.tab_title_2 }}</button>
  <button type="button" class="tabs__tab-btn" data-tab-id="tab3_{{ block.id }}_{{ for_desk_mob }}">{{ block.settings.tab_title_3 }}</button>
</div>

<div data-tab="tab1_{{ block.id }}_{{ for_desk_mob }}" class="tabs__tab">
   <div class="tab__content">
      {{ block.settings.paragraph_1 }}
    </div>
     <article>
       {{ block.settings.page_1.content }}
     </article>
</div>

<div data-tab="tab2_{{ block.id }}_{{ for_desk_mob }}" class="tabs__tab">
   
  <div class="tab__content">
      {{ block.settings.paragraph_2 }}
    </div>
     <article>
       {{ block.settings.page_2.content }}
     </article>
</div>

<div data-tab="tab3_{{ block.id }}_{{ for_desk_mob }}" class="tabs__tab">
  <div class="tab__content">
      {{ block.settings.paragraph_3 }}
    </div>
     <article>
       {{ block.settings.page_3.content }}
     </article>
</div>
</div>
<script>
  const tabsBtns = Array.from(document.querySelectorAll("[data-tab-id]"));
const tabs = Array.from(document.querySelectorAll("[data-tab]")); 
    let selectedTab = tabsBtns[1].dataset.tabId;
    const hideTabs = () => {
  tabs
    .filter((tab) => tab.dataset.tab !== selectedTab)
    .forEach((tab) => {
      tab.classList.add("tabs__tab--hide");
    });

  tabsBtns
    .filter((tab) => tab.dataset.tabId !== selectedTab)
    .forEach((tab) => {
      tab.classList.add("tabs__tab-btn--not-selected");
    });
};
hideTabs();

const handleSelectTab = (e) => {
  selectedTab = e.target.dataset.tabId;

  tabs.forEach((tab) => {
    tab.classList.remove("tabs__tab--hide");
  });

  tabsBtns.forEach((tab) => {
    tab.classList.remove("tabs__tab-btn--not-selected");
  });

  hideTabs();
};

tabsBtns.forEach((btn) => {
  btn.addEventListener("click", handleSelectTab);
}); 





</script>
