<style>
   @media only screen and (min-width: 768px){
  div#shopify-section-{{ block.id }}{
    display:none;
  }
   }
  @media only screen and (max-width: 767px){
    div#shopify-section-{{ block.id }}{
    background: {{ block.settings.body_bg }};
  }
   #shopify-section-{{ block.id }} .details_product_popup {
    display: block;
      
}
   #shopify-section-{{ block.id }} .details_product_popup h2 {
    padding: 10px 30px 10px;
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 500;
    font-size: 12px;
    line-height: 150%;
    letter-spacing: 0.1em;
    color:  {{ block.settings.body_text }};
}
  #shopify-section-{{ block.id }}  .details_product {
    position: relative;
    display: grid;
    grid-auto-flow: column;
    grid-template-rows: 100%;
    column-gap: 20px;
    margin: 0 0 0 0;
    padding: 0 30px 25px 30px;
    height: auto;
    width: 100%;
    white-space: nowrap;
    overflow: auto hidden;
}
    .details_product_inner {
    position: relative;
}
  #shopify-section-{{ block.id }}  .custom-model-inner {
    -webkit-transform: translate(0, -25%);
    -ms-transform: translate(0, -25%);
    transform: translate(0, -25%);
    -webkit-transition: -webkit-transform 0.3s ease-out;
    -o-transition: -o-transform 0.3s ease-out;
    transition: -webkit-transform 0.3s ease-out;
    -o-transition: transform 0.3s ease-out;
    transition: transform 0.3s ease-out;
    transition: transform 0.3s ease-out, -webkit-transform 0.3s ease-out;
    display: inline-block;
    vertical-align: middle;
    width: 600px;
    margin: 30px auto;
    max-width: 97%;
}
  #shopify-section-{{ block.id }}  .custom-model-inner {
    margin-top: 0px;
}
  #shopify-section-{{ block.id }}  .custom-model-main0 ,#shopify-section-{{ block.id }} .custom-model-main1 , #shopify-section-{{ block.id }} .custom-model-main2{
    text-align: center;
    overflow: hidden;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    /* z-index: 1050; */
    -webkit-overflow-scrolling: touch;
    outline: 0;
    opacity: 0;
    -webkit-transition: opacity 0.15s linear, z-index 0.15;
    -o-transition: opacity 0.15s linear, z-index 0.15;
    transition: opacity 0.15s linear, z-index 0.15;
    z-index: 1;
    overflow-x: hidden;
    overflow-y: auto;
    transition: all 600ms ease 0s, background-color 0s ease 0s;
    transform: translate3d(0px, 100%, 0px);
} 
  #shopify-section-{{ block.id }}  .details_product_inner h2.SectionHeader__Heading.Heading.u-h1 {
    font-family: 'Montserrat';
    font-style: normal;
    font-weight: 600;
    font-size: 12px;
    line-height: 125%;
    letter-spacing: 0.15em;
    color:  {{ block.settings.body_text }};
    margin-top: 15px;
    padding-left: 5px;
    margin-bottom: 0 !important;
    padding-bottom: 0;
}
  #shopify-section-{{ block.id }}  .custom-model-wrap {
    display: block;
    width: 100%;
          height: 100%;
    position: relative;
    background-color:  {{ block.settings.body_bg }};
    border: 1px solid #999;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    -webkit-box-shadow: 0 3px 9px rgba(0, 0, 0, 0.5);
    box-shadow: 0 3px 9px rgba(0, 0, 0, 0.5);
    background-clip: padding-box;
    outline: 0;
    text-align: left;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    max-height: calc(100vh - 20px);
    overflow-y: auto;
}
  #shopify-section-{{ block.id }}  .close-btn {
    position: absolute;
    right: 12px;
    top: 15px;
    cursor: pointer;
    z-index: 999;
}
   #shopify-section-{{ block.id }} .details_product_inner img {
    max-width: 285px;
}
  #shopify-section-{{ block.id }}  .custom-model-inner {
    margin-top: 0px;
}
  #shopify-section-{{ block.id }}  .pop-up-content-wrap img {
    max-width: 100%;
}
  #shopify-section-{{ block.id }}  .content {
    padding: 20px;
    white-space: break-spaces;
}
  #shopify-section-{{ block.id }}  .content h2 { 
    font-style: normal;
    font-weight: 600;
    font-size: 20px;
    line-height: 24px;
    letter-spacing: .15em;
    color:  {{ block.settings.body_text }};
    padding: 10px 0 0;
    margin-bottom: 10px;
    display: inline-block;
}
  #shopify-section-{{ block.id }}  .content p { 
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 15px;
    letter-spacing: 0.1em;
    color:  {{ block.settings.body_text }};
    padding: 0;
}
  #shopify-section-{{ block.id }}  .details_product_inner .SectionHeader__Description.Rte {
    margin-top: 2px;
}
  #shopify-section-{{ block.id }}  .model-open {
    z-index: 33;
    opacity: 1;
    overflow: hidden;
    transform: translate3d(0px, 0px, 0px);
}
  #shopify-section-{{ block.id }}  .model-open .custom-model-inner {
    -webkit-transform: translate(0, 0);
    -ms-transform: translate(0, 0);
    transform: translate(0, 0);
    position: relative;
    z-index: 333;
}
#shopify-section-{{ block.id }} .content {
display: flex;
    flex-direction: column;
    max-width: 100%;
    white-space: break-spaces;
    padding: 15px 18px;
    background: {{ block.settings.body_bg }};
  }
    
  }
  </style>
