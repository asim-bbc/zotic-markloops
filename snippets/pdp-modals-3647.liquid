<script>
  $(".Click-here0").on('click', function() {
  $(".custom-model-main0").addClass('model-open');
  $("body").addClass('hide-scroll');
}); 
$(".close-btn0, .bg-overlay").click(function(){
  $(".custom-model-main0").removeClass('model-open');
  $("body").removeClass('hide-scroll');
